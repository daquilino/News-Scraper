
<header class="text-center">
  <h1 class="text-center" id="main-header">JavaScript.com News Scrapper</h1>
 
  <form action="/api/scrape" method="GET">
  <button type="submit">Get JS News</button></a>
  </form>
</header>

<div class="container">
  
  <div class="panel-group" id="accordion">
    
  
    {{#each article}}
     
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a href={{this.link}} target="_blank"><h3>{{this.title}}</h3></a>
          </h4>
           <a data-toggle="collapse" data-parent="#accordion" href='#{{this._id}}'><button class="btn btn-info">Comments</button></a>
        </div>
       
        <div id={{this._id}} class="panel-collapse collapse">
          <div class="panel-body">                      
            {{> comments}}
          </div>

        </div>
      </div>  
     
    {{/each}}

    </div><!-- ENd panel group-->
   
  
</div><!-- End .container -->

